@{
    Layout = null;
}
<div class="row" style="padding-top: 5px;">
    <div class="col-sm-2">
        <button id="btnMostrarPacientesPagosPend" class="btn badge badge-pill badge-info"><i class="fa fa-search"></i> Ver pacientes pendientes</button>
    </div>
    <div class="col-sm-4">
        <input type="text" class="form-control form-control-sm" placeholder="Buscar nombre paciente..." />
    </div>
</div>
<div class="row" style="padding-top: 5px;">
    <div class="col-sm-12">
        <div class="table scrollestilo" style="height: 85vh; overflow: scroll;">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr class="table-active">
                        <th>Nombre</th>
                        <th style="text-align: center;">Fecha</th>
                        <th>Monto</th>
                        <th style="text-align: center;">Opciones</th>
                    </tr>
                </thead>
                <tbody id="adminTablaPacientesPagos"></tbody>
            </table>
        </div>
    </div>
</div>